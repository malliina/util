# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
#GET     /                           controllers.WebSockets.index


# Hello action
GET     /hello                      controllers.Application.sayHello

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET     /test/:id                   controllers.Application.printId(id:Int)

GET     /money                      controllers.Application.money

GET     /secret                     controllers.Application.secret

# TODO app
GET     /tasks                      controllers.MyTasks.home
GET     /tasks/create               controllers.MyTasks.newTask
GET     /tasks/:id/delete           controllers.MyTasks.delete(id:Long)

# Web Sockets
GET     /ws                         controllers.WebSockets.index
GET     /ws/openclose               controllers.WebSockets.openClose

# Chat using Web Sockets
#GET     /chat                       controllers.Application.index
#GET     /chat/room                  controllers.Application.chatRoom(username: Option[String] ?= None)
#GET     /chat/room/chat             controllers.Application.chat(username)